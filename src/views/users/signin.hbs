<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card mt-4 text-center">
            <div class="card-header">
                <h1>Ingreso de Sesion</h1>
            </div>
            <img class="logo mx-auto d-block m-4" src="/img/account_logo.png" alt="Account Logo">
            <div class="card-body">
                <form action="/users/signin" method="post">
                    <div class="mt-3">
                        <input type="email" name="email" class="form-control" placeholder="Correo Electronico" >
                    </div>
                    <div class="mt-3">
                        <input type="password" name="password" class="form-control" placeholder="Contraseña">
                    </div>
                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100 btn-grad-save">
                            Iniciar sesión
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>