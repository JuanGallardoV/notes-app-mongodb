<div class="row">
    {{#each notes}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>{{description}}</p>
                <form action="/notes/delete/{{_id}}?_method=DELETE" method="post">
                    <input type="hidden" name="_method" value="DELETE">
                    <button class="btn btn-danger btn-block btn-sm w-100 btn-grad-delete" type="submit">Borrar</button>
                </form>
            </div>
        </div>
    </div>
    {{else}}
    <div class="container">
        <div class="card mx-auto w-50 text-center">
        <div class="card-body">
            <p class="lead">No se han agregado notas</p>
            <a href="/notes/add" class="btn btn-success w-50 btn-grad-create">Crea una</a>
        </div>
    </div>
    </div>
    {{/each}}
</div>